<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:mx="library://ns.adobe.com/flex/mx"
				width="100%" 
				height="32"  
				 maxWidth="190"
				  height.selected="42"
				autoDrawBackground="true"
				dataChange="itemrenderer1_dataChangeHandler(event)"
				>
	
	<fx:Script>
		<![CDATA[
			import com.event.MainEvent;
			import com.event.renderer.TabChatEvent;
			
			import mx.events.FlexEvent;
			
			import util.classes.QueueChat;
			import util.classes.User;
			
			
			
			private var interval:uint;
			
	
			
			[Bindable]
			public var itemData:User;
			
			
			
			
			protected function itemrenderer1_dataChangeHandler(event:FlexEvent):void
			{
				if (data) 
				{
					
					itemData=data as User;
					
					if(itemData.userVO.name)
					{
						
						
						label_name.text = itemData.userVO.name;
					}
					else
					{
						
						label_name.text = itemData.userVO.id.toString();
					}
					
					
					
				}
				
				
				
				
				
			}
			
			
			
			
		
			
			
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="selected" />
		
		
		
	</s:states>     
	
	<s:BorderContainer id="skinnableContainer_content" width="100%" height="100%"
					   backgroundColor="#818181"
					   
					   backgroundColor.hovered="#101010"
					   backgroundColor.selected="#252525"
					   backgroundColor.normal="#252525">
		
		
		
		
		
		
		
		<s:Label id="label_name" fontWeight="bold" 
				 color="#FFFFFF" horizontalCenter="0" verticalCenter="0"/>
		
		
		
		
		<s:Button id="button_close" right="5" width="16" height="16" label="Button"
				  verticalCenter="0"
				  label.selected="x"/>
		
		
		
	</s:BorderContainer>
	
	
	
</s:ItemRenderer>
