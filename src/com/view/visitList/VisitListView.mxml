<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  width="100%" height="100%" creationComplete="group1_creationCompleteHandler(event)"
		  gap="0">
	
	
	
	
	
	
	
	
	<fx:Script>
		<![CDATA[
			import com.controller.VisitListController;
			import com.model.ChatManagerModel;
			import com.model.LoginModel;
			import com.model.MainModel;
			import com.view.MainView;
			import com.view.chatWindow.ChatWindowView;
			
			import mx.events.FlexEvent;
			import mx.utils.ObjectUtil;
			
			import spark.events.GridSelectionEvent;
			
			import util.classes.User;
			import util.vo.entities.UserVO;
			import util.vo.entities.WebVO;
			
			
			[Bindable]
			[Inject]
			public var loginModel:LoginModel;
			
			[Bindable]
			[Inject]
			public var mainModel:MainModel;
			
			[Bindable]
			[Inject]
			public var visitListController:VisitListController;
			
			
			[Bindable]
			[Inject]
			public var chatManagerModel:ChatManagerModel;
			
			
		
			
		
			
			
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
			
			
				
			}
			
			
			
			public function labelFunc_visualizando(item:Object, column:GridColumn):String
			{
				
				var webs:String= "";
				var user:User = item as User;
			
				
				for each(var webVOItem:WebVO in user.arrayList_webVO.source)
				webs +=" "+webVOItem.title; 
				
				return webs;
			}
			
			
			
			public function labelFunc_visitante(item:Object, column:GridColumn):String
			{
			
				
				var user:User = item as User;
				
				return  user.userVO.id.toString();
				
			}
			
			
		
			
		
			protected function datagrid_visit_selectionChangeHandler(event:GridSelectionEvent):void
			{
				
				var user:User = datagrid_visit.selectedItem as User;
				
				//pregunto si el usuario esta en el tab, si no lo agrego 
		    	visitListController.selectUser(user);
					
				
				
				
				
				
				
			}
			
			
			
		]]>
	</fx:Script>
	
	
	
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	
		
	<s:BorderContainer  width="100%" height="61" backgroundColor="#EAEAEA"
					   borderColor="#C1C1C1">
	
			
		
		<s:Label fontSize="16" fontWeight="normal" left="10" verticalCenter="0" text="Visitantes en su sitio"/>
			
			
		
	
		<s:VGroup right="10" width="412" horizontalAlign="right" verticalCenter="0">
			<s:Label fontSize="16" fontWeight="normal" text="NÃºmero total de visitantes:"/>
			
			<s:TextInput x="37" width="375" prompt="encuentra un visitante"/>
			
		</s:VGroup>
		
		
	</s:BorderContainer>
	<s:DataGrid width="100%" borderVisible="false" height="100%" requestedRowCount="4" dataProvider="{mainModel.currentWorkSpaceDomain.arrayCollection_users}"
				 id="datagrid_visit"
				  selectionChange="datagrid_visit_selectionChangeHandler(event)"
				   >
		<s:columns>
			<s:ArrayList>
				<s:GridColumn   labelFunction="{labelFunc_visitante}"    headerText="Visitante"></s:GridColumn>
				<s:GridColumn   dataField="minuteConnect"  headerText="Conectado"></s:GridColumn>
				<s:GridColumn     dataField="textDisplayedWebs"  headerText="Visualizando"></s:GridColumn>
			</s:ArrayList>
		</s:columns>
	
		
	</s:DataGrid>

	
	
	
</s:VGroup>
